{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: start:debug",
            "type": "npm",
            "script": "start:debug",
            "problemMatcher": "$tsc",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm: build",
            "type": "npm",
            "script": "build",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "npm: test",
            "type": "npm",
            "script": "test",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Kill All Node Processes",
            "type": "shell",
            "command": "taskkill /F /IM node.exe",
            "windows": {
                "command": "taskkill /F /IM node.exe"
            },
            "linux": {
                "command": "killall node"
            },
            "osx": {
                "command": "killall node"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}